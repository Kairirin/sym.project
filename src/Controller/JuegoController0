<?php

namespace App\Controller;

use App\Entity\Juego;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;
use Doctrine\Persistence\ManagerRegistry;

final class JuegoController extends AbstractController
{
    #[Route('/juego', name: 'app_juego')]
    public function index(ManagerRegistry $doctrine): Response
    {
        $videojuegos = $doctrine->getRepository(Juego::class)->findAll();

        return $this->render('juego/index.html.twig', [
            'videojuegos' => $videojuegos
        ]);
    }

    //Ir a la ficha de un juego. Entre llaves indicamos el campo por el que queremos buscar
    #[Route('/juego/{id}', name: 'sym_juego_show')]
    public function show(Juego $juego): Response
    {
        return $this->render('juego/show.html.twig', [
            'juego' => $juego
        ]);
    }

    //TODO: No sé si este método será así
    #[Route('/juego/{plataforma_id}', name: 'sym_juego_filtrarPlataforma')]
    public function filtrarPlataforma(Juego $juego): Response
    {
        return $this->render('juego/show.html.twig', [
            'juego' => $juego
        ]);
    }
}
