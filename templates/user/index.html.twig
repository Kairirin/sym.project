{% extends 'base.html.twig' %}

{% block title %}Usuarios
{% endblock %}

{% block principal %}
	<div class="container-fluid bg-breadcrumb">
		<ul class="breadcrumb-animation">
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
		</ul>
		<div class="container text-center py-5" style="max-width: 900px;">
			<h3 class="display-3 mb-4 wow fadeInDown" data-wow-delay="0.1s">Listado de usuarios</h1>
		</div>
	</div>

	<div class="container-fluid feature overflow-hidden py-5">
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Username</th>
					<th>Roles</th>
					<th>Password</th>
					<th>Avatar</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.username }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>{{ user.password }}</td>
						<td>{{ user.avatar }}</td>
						<td>
							<a href="{{ path('user_show', {'id': user.id}) }}">Mostrar</a>
							<a href="{{ path('user_edit', {'id': user.id}) }}">Editar</a>
                            {{ include('user/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">No existen usuarios</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('user_new') }}">Crear nuevo usuario</a>
	</div>
{% endblock %}
