{{ form_start(form) }}
<div class="row g-3">
{{ form_errors(form) }}
	<div class="col-lg-12 col-xl-6">
		<div class="form-floating">
			{{ form_row(form.titulo) }}
		</div>
	</div>
	<div class="col-12">
		<div class="form-floating">
			{{ form_row(form.comentario) }}
		</div>
	</div>
	<div class="form-floating">
		<div class="col-xs-12">
			{{ form_row(form.ruta_captura,{'label':'Captura:','label_attr': {'class':'etiqueta'}}) }}
		</div>
	</div>
	<div class="col-12">
		<button class="btn">{{ button_label|default('Enviar') }}</button>
	</div>
</div>
{{ form_end(form) }}



