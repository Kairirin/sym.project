{{ form_start(form) }}
<div class="container-fluid text-center"> 
	<div class="my-custom-class-for-errors">
		{{ form_errors(form) }}
	</div>
	<div class="row">
		<div class="col-xs-12 col-sm-8 offset-2">
			{{ form_row(form.nombre) }}
		</div>
		<div class="col-xs-12 col-sm-8 offset-2" style="margin-top: 1.5rem; ">
			{{ form_row(form.plataforma,{'label':'Plataforma:'}) }}
		</div>
	</div>
	<div class="row" style="margin-top: 1.5rem; ">
		{{ form_row(form.imagen,{'label':'Imagen:'}) }}
	</div>
	<div class="row">
		<button class="btn">{{ button_label|default('Guardar') }}</button>
	</div>
</div>
{{ form_errors(form) }}
{{ form_end(form) }}
